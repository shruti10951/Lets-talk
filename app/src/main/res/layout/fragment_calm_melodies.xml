<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calm_melodies2_cover"
    tools:context=".fragments.CalmMelodiesFragment">

    <View
        android:id="@+id/melodies_one_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80hsdp"
        android:layout_marginStart="@dimen/_35hsdp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="@dimen/_35hsdp"
        android:background="#D7000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Binaural Beats"
        android:textColor="@color/white"
        android:textSize="@dimen/_25font_ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/melodies_one_option"
        app:layout_constraintEnd_toEndOf="@+id/melodies_one_option"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/melodies_one_option"
        app:layout_constraintTop_toTopOf="@+id/melodies_one_option" />

    <View
        android:id="@+id/melodies_two_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80hsdp"
        android:layout_marginStart="@dimen/_35hsdp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="@dimen/_30hsdp"
        android:background="#D7000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/melodies_one_option" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="serif"
        android:text="Isochronic Tones"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_23font_ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/melodies_two_option"
        app:layout_constraintEnd_toEndOf="@+id/melodies_two_option"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/melodies_two_option"
        app:layout_constraintTop_toTopOf="@+id/melodies_two_option"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

