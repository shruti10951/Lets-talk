<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_10hsdp"
    android:layout_marginStart="@dimen/_10hsdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_comment_rv"
        android:layout_width="@dimen/_35hsdp"
        android:layout_height="@dimen/_35hsdp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user_profile_default"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/_1font_ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/username_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:text="Amrita2004"
        android:textColor="@color/black"
        android:textSize="@dimen/_14font_ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile_comment_rv"
        app:layout_constraintStart_toEndOf="@+id/user_profile_comment_rv"
        app:layout_constraintTop_toTopOf="@+id/user_profile_comment_rv"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/comment_body_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:inputType="textMultiLine"
        android:paddingEnd="@dimen/_9hsdp"
        android:text="Comment body"
        android:textColor="@color/black"
        android:textSize="@dimen/_13font_ssp"
        android:maxWidth="@dimen/_230hsdp"
        app:layout_constraintStart_toEndOf="@+id/user_profile_comment_rv"
        app:layout_constraintTop_toBottomOf="@+id/username_post" />

    <TextView
        android:id="@+id/commentedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:fontFamily="serif"
        android:text="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_body_rv"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>