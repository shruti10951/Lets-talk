<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.NutritionOptionsFragment">

    <View
        android:id="@+id/nutrition_view"
        android:layout_width="411dp"
        android:layout_height="171dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/nutrition_drawer_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Nutrition"
        android:textColor="@color/white"
        android:textSize="@dimen/_20font_ssp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/nutrition_view"
        app:layout_constraintEnd_toEndOf="@+id/nutrition_view"
        app:layout_constraintStart_toStartOf="@+id/nutrition_view"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:fontFamily="serif"
        android:text="Articles"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nutrition_view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutrition_view"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/nutrition_view1"
        android:layout_width="410dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="8dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view" />


    <TextView
        android:id="@+id/nutrition_article_text1"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:maxWidth="250dp"
        android:text="Why Nutrition is an Important Part of Fitness?"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nutrition_imageView4"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view1" />

    <ImageView
        android:id="@+id/nutrition_imageView4"
        android:layout_width="116dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/nutrition_view1"
        app:layout_constraintEnd_toStartOf="@+id/nutrition_article_text1"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view1"
        app:layout_constraintVertical_bias="0.439" />

    <View
        android:id="@+id/nutrition_view2"
        android:layout_width="410dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="8dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view" />


    <TextView
        android:id="@+id/nutrition_article_text2"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:fontFamily="serif"
        android:maxWidth="250dp"
        android:gravity="center"
        android:text="What is the Impact of Nutrition on Your Health?"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nutrition_imageView1"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view2" />

    <ImageView
        android:id="@+id/nutrition_imageView1"
        android:layout_width="116dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/nutrition_view2"
        app:layout_constraintEnd_toStartOf="@+id/nutrition_article_text2"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view2"
        app:layout_constraintVertical_bias="0.611" />

    <View
        android:id="@+id/nutrition_view3"
        android:layout_width="410dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="8dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view" />


    <TextView
        android:id="@+id/nutrition_article_text3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:fontFamily="serif"
        android:maxWidth="250dp"
        android:gravity="center"
        android:text="How Can I Eat a Healthy Diet?"
        android:textColor="@color/white"
        android:textSize="@dimen/_14font_ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nutrition_imageView3"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view3" />

    <ImageView
        android:id="@+id/nutrition_imageView3"
        android:layout_width="116dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/nutrition_view3"
        app:layout_constraintEnd_toStartOf="@+id/nutrition_article_text3"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nutrition_view3"
        app:layout_constraintVertical_bias="0.79" />

</androidx.constraintlayout.widget.ConstraintLayout>