<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SleepOptionsFragment">
    <View
        android:id="@+id/sleep_view"
        android:layout_width="411dp"
        android:layout_height="171dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/sleep_drawer_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:fontFamily="serif"
        android:text="Sleep"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20font_ssp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/sleep_view"
        app:layout_constraintEnd_toEndOf="@+id/sleep_view"
        app:layout_constraintStart_toStartOf="@+id/sleep_view"
        app:layout_constraintTop_toTopOf="@+id/sleep_view" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:fontFamily="serif"
        android:text="Articles"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sleep_view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleep_view" />

    <View
        android:id="@+id/sleep_view2"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@color/greyTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleep_view1" />

    <TextView
        android:id="@+id/sleep_article_text2"
        android:layout_width="wrap_content"
        android:layout_height="119dp"
        android:layout_marginStart="@dimen/_5hsdp"
        android:layout_marginEnd="@dimen/_5hsdp"
        android:fontFamily="serif"
        android:gravity="center"
        android:maxWidth="@dimen/_200hsdp"
        android:text="There are four simple things to consider you to help heal a period of poor sleep"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_ssp"
        app:layout_constraintEnd_toEndOf="@+id/sleep_view2"
        app:layout_constraintStart_toEndOf="@+id/sleep_imageView4"
        app:layout_constraintTop_toTopOf="@+id/sleep_view2" />

    <ImageView
