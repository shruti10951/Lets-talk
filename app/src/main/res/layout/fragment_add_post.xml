                        android:fontFamily="serif"
                        android:text="Hopes"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/friendsType" />

                    <TextView
                        android:id="@+id/bullyingType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Bullying"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hopesType" />

                    <TextView
                        android:id="@+id/healthType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Health"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bullyingType" />

                    <TextView
                        android:id="@+id/workType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Work"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/healthType" />

                    <TextView
                        android:id="@+id/parentingType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Parenting"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
