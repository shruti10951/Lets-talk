                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10font_ssp"
                    android:layout_marginEnd="@dimen/_10font_ssp"
                    android:background="#F4DFB9">

                    <TextView
                        android:id="@+id/familyType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10font_ssp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Family"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/selfHarmType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Self Harm"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/familyType" />

                    <TextView
                        android:id="@+id/friendsType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Friends"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/selfHarmType" />

                    <TextView
                        android:id="@+id/hopesType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
