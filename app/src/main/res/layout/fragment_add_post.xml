                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/parentingType" />

                    <TextView
                        android:id="@+id/religionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Religion"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/educationType" />

                    <TextView
                        android:id="@+id/lgbtType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="LGBT"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
