                    <TextView
                        android:id="@+id/mentalHealthType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Mental Health"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pregnancyType" />

                    <TextView
                        android:id="@+id/addictionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Addiction"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mentalHealthType" />

                    <TextView
                        android:id="@+id/selfCareType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Self Care"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addictionType" />

                    <TextView
                        android:id="@+id/griefType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Grief"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/selfCareType" />

                    <TextView
                        android:id="@+id/anxietyType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Anxiety"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/griefType" />

                    <TextView
                        android:id="@+id/disabilitiesType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Disabilities"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/anxietyType" />

                    <TextView
                        android:id="@+id/depressionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:text="Depression"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/disabilitiesType" />

                    <TextView
                        android:id="@+id/othersType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_10font_ssp"
                        android:fontFamily="serif"
                        android:paddingBottom="@dimen/_10font_ssp"
                        android:text="Others"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13font_ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/depressionType" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/okay_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/greyTrans"
            android:fontFamily="serif"
            android:text="Okay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15font_ssp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.934"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>