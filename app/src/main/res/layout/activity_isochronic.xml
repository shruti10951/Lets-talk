<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.IsochronicActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <View
                    android:id="@+id/mindfulness_view"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/isochronic_cover1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="171dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Isochronic Tones"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20font_ssp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="@+id/mindfulness_view"
                    app:layout_constraintEnd_toEndOf="@+id/mindfulness_view"
                    app:layout_constraintHorizontal_bias="0.037"
                    app:layout_constraintStart_toStartOf="@+id/mindfulness_view"
                    app:layout_constraintTop_toTopOf="@+id/mindfulness_view"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="108dp"
                    android:layout_height="28dp"
                    android:text="Tunes"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.027"
                    app:layout_constraintStart_toStartOf="@+id/mindfulness_view"
                    app:layout_constraintTop_toBottomOf="@+id/mindfulness_view"
                    app:layout_constraintVertical_bias="0.036" />

                <View
                    android:id="@+id/isochronic1"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="@dimen/_30hsdp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mindfulness_view" />

                <TextView
                    android:id="@+id/mindfulness_article_text1"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Calm Mind"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15font_ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/isochronic1"
                    app:layout_constraintStart_toStartOf="@+id/isochronic1"
                    app:layout_constraintTop_toTopOf="@+id/isochronic1" />

                <View
                    android:id="@+id/isochronic2"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="@dimen/_10hsdp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/mindfulness_article_text2"
                    app:layout_constraintTop_toBottomOf="@+id/isochronic1" />

                <TextView
                    android:id="@+id/mindfulness_article_text2"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Morning Motivator"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15font_ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/isochronic2"
                    app:layout_constraintStart_toStartOf="@+id/isochronic2"
                    app:layout_constraintTop_toTopOf="@+id/isochronic2" />

                <View
                    android:id="@+id/isochronic3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="@dimen/_10hsdp"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/isochronic2" />

                <TextView
                    android:id="@+id/mindfulness_article_text3"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Alpha Waves"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14font_ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/isochronic3"
                    app:layout_constraintStart_toStartOf="@+id/isochronic3"
                    app:layout_constraintTop_toTopOf="@+id/isochronic3" />

                <View
                    android:id="@+id/isochronic4"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="@dimen/_10hsdp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/isochronic3" />

                <TextView
                    android:id="@+id/mindfulness_article_text4"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Beta Swirl"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14font_ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/isochronic4"
                    app:layout_constraintStart_toStartOf="@+id/isochronic4"
                    app:layout_constraintTop_toTopOf="@+id/isochronic4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>