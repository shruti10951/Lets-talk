<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_post"
        android:layout_width="@dimen/_40hsdp"
        android:layout_height="@dimen/_40hsdp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/woman"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/_1font_ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/username_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:text="Amrita2004"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile_post"
        app:layout_constraintStart_toEndOf="@+id/user_profile_post"
        app:layout_constraintTop_toTopOf="@+id/user_profile_post" />

    <Button
        android:id="@+id/follow_btn_user_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5hsdp"
        android:fontFamily="serif"
        android:paddingStart="@dimen/_10hsdp"
        android:paddingEnd="@dimen/_10hsdp"
        android:text="Follow"
        android:textAllCaps="false"
        android:textSize="@dimen/_12font_ssp"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_profile_post" />

</androidx.constraintlayout.widget.ConstraintLayout>